<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

@using Proyecto1ED2.Models
@model List<Usuario>

@{
    ViewBag.Title = "MenuContactos";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <div>
        <br />
    </div>
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
            <div class="page-header">
                <h1>
                    <span>Contactos</span>
                </h1>
            </div>
        </div>
        <div class="col-md-2">
        </div>
    </div>
</head>
<body>
    <br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-2">
                    </div>
                    <div class="form-group col-md-8" style="text-align: center">
                        <div>
                            <table class="table table-bordered">
                                @for (int i = 0; i < 1; i++)
                                {
                                    <tr>
                                        <td style="text-align: center">
                                            <strong>
                                                @Html.DisplayNameFor(model => model[0].Nombre)
                                            </strong>
                                        </td>
                                        <td style="text-align: center">
                                            <strong>
                                                @Html.DisplayNameFor(model => model[0].User)
                                            </strong>
                                        </td>
                                        <th></th>
                                    </tr>
                                }

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="text-align: center">
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td style="text-align: center">
                                            @Html.DisplayFor(modelItem => item.User)
                                        </td>
                                        <td style="text-align: center">
                                            @Html.ActionLink("Enviar mensaje", "Chat", new { id = item.User }, new { @class = "btn btn-info" })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                    <div class="col-md-2">
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-8">
                        @Html.ActionLink("Regresar", "Principal", null, new { @class = "btn btn-block btn-info" })
                    </div>
                    <div class="col-md-2">
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
