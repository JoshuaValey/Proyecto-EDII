<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

@model Proyecto1ED2.Models.Palabra

@{
    ViewBag.Title = "PalabraClave";
}

<!DOCTYPE html>
<html>
<body>
    @using (@Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="page-header">
                        <h1>
                            Palabra clave
                        </h1>
                    </div>
                    <br />
                    <br />
                    <div class="form-horizontal">
                        <form>
                            <div class="form-group">
                                @Html.EditorFor(model => model.palabra, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.palabra, "", new { @class = "text-danger" })
                            </div>
                            <br />
                            <div class="form-group" style="text-align: center">
                                <input type="submit" value="Buscar" class="btn btn-info" />
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-2">
                </div>
            </div>
        </div>
    }
    </body>
</html>

